<%- include('partial/header') %>
<%- include('partial/navbar') %>
<br>
<form action="/students/add" method="POST"><br>
    <div class="alert alert-danger" role="alert">
        <%= errors %>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> First Name</label>
        <div class="col-sm-10">
            <input type="text" name="first_name" class="form-control" id="inputEmail3"
                placeholder="Insert Your First Name..">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" name="last_name" class="form-control" id="inputPassword3"
                placeholder="Insert Your Last Name..">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" name="email" class="form-control" id="inputPassword3" placeholder="Insert Your Email..">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">gender</label>
        <div class="col-sm-10">
            <select class="custom-select" name="gender">
                <option selected>Choose One</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Birth Date</label>
        <div class="col-sm-10">
            <input type="date" name="birth_date" class="form-control" id="inputPassword3"
                placeholder="Insert Your Birth Date">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add Student</button>
        </div>
    </div>

</form>
<%- include('partial/footer') %>