<table class="table">

    <tr>
        <th>id</th>
        <th>First_name</th>
        <th>Last_name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Birth Date</th>
        <th>Action</th>
    </tr>
    <% data.forEach(list => { %>
    <tr>
        <td><%= list.id%></td>
        <td><%= list.first_name%></td>
        <td><%= list.last_name%></td>
        <td><%= list.email%></td>
        <td><%= list.gender%></td>
        <td><%= list.birth_date%></td>
        <td> <a href="/students/<%= list.id%>/edit">Edit</a> | <a href="/students/<%= list.id%>/delete">Delete</a>
        </td>
    </tr>
    <% }) %>


